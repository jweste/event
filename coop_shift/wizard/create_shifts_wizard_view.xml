<odoo>
    <record id="view_shift_template_wizard_form" model="ir.ui.view">
        <field name="model">create.shifts.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Shifts">
                <group>
                    <field name="last_shift_date" readonly="True"/>
                    <field name="date_from" required="True"/>
                    <field name="date_to" required="True"/>
                </group>
                <footer>
                    <button name="create_shifts" string="Create Shifts" type="object" class="oe_highlight"/>
                    <label string="or" />
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

   <record id="action_createshifts_multi" model="ir.values">
       <field name="model_id" ref="coop_shift.model_shift_template" />
       <field name="name">Create Shifts</field>
       <field name="key2">client_action_multi</field>
       <field name="value" eval="'ir.actions.act_window,' +str(ref('coop_shift.action_create_shift_shifts'))" />
       <field name="key">action</field>
       <field name="model">shift.template</field>
    </record>
</odoo>