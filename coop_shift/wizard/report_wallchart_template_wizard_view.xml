<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="shift_report_wallchart_template_view" model="ir.ui.view">
            <field name="name">WallChart-Template Report</field>
            <field name="model">report.wallchart_template</field>
            <field name="arch" type="xml">
            <form string="Report Options">
                <group>
                    <field name="mo"/>
                    <field name="tu"/>
                    <field name="we"/>
                    <field name="th"/>
                    <field name="fr"/>
                    <field name="sa"/>
                    <field name="su"/>
                    <field name="all_days"/>
                </group>
                <footer>
                    <button name="check_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                    or 
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
            </field>
        </record>

        <record id="action_wallchart_template_wizard" model="ir.actions.act_window">
            <field name="name">WallChart - Template</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">report.wallchart_template</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="domain">[]</field>
            <field name="view_id" ref="shift_report_wallchart_template_view"/>
        </record>

        <menuitem
            id="menu_wallchart_template"
            action="action_wallchart_template_wizard"
            name="WallChart - Template"
            parent="coop_shift.menu_reporting_shifts"
            groups="group_shift_manager"
            sequence="14"/>
    </data>
</openerp>